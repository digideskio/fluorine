{
  "name": "fluorine-lib",
  "version": "2.1.0",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "es",
    "dist",
    "src"
  ],
  "description": "Reactive state and side effect management for React using a single stream of actions",
  "scripts": {
    "test": "ava && npm run lint",
    "lint": "eslint src",
    "check": "npm run test && npm run build",
    "clean": "rm -rf lib es dist",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "NODE_ENV=development webpack src/index.js dist/fluorine.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/fluorine.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm run build",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testDirectoryName": "test",
    "unmockedModulePathPatterns": [
      "."
    ]
  },
  "author": "Phil Pl√ºckthun <phil@plckthn.me> (https://github.com/philplckthun)",
  "bugs": {
    "url": "https://github.com/philplckthun/fluorine/issues"
  },
  "license": "MIT",
  "keywords": [
    "fluorine",
    "flux",
    "react",
    "rx",
    "reducer",
    "state",
    "side effect",
    "manager",
    "immutable"
  ],
  "dependencies": {
    "@reactivex/rxjs": "^5.0.0-beta.2",
    "babel-runtime": "^6.6.1"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.2.0",
    "babel-eslint": "^6.0.0-beta.5",
    "babel-jest": "^6.0.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.0",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-philpl": "^0.1.0",
    "enzyme": "^2.1.0",
    "eslint": "~2.2.0",
    "eslint-config-excellence": "^1.11.0",
    "eslint-plugin-react": "^4.2.1",
    "jest-cli": "^0.8.2",
    "jsdom": "^8.1.0",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.7",
    "webpack": "^2.1.0-beta.4"
  },
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "ava": {
    "files": [
      "test"
    ],
    "require": [
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "presets": [
        "babel-preset-philpl"
      ],
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
