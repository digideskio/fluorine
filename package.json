{
  "name": "fluorine-lib",
  "version": "4.1.4",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "es",
    "dist",
    "src"
  ],
  "description": "Reactive state and side effect management for React using a single stream of actions",
  "scripts": {
    "pretest": "npm run build:commonjs",
    "test": "NODE_ENV=production ava --verbose && npm run lint",
    "lint": "eslint src",
    "check": "npm run test && npm run build",
    "clean": "rm -rf lib es dist",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "babel src --out-dir es",
    "build:umd": "NODE_ENV=development webpack src/index.js dist/fluorine.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/fluorine.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm run build",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "prebook": "gitbook install ./docs",
    "book": "gitbook build ./docs",
    "book:watch": "gitbook serve ./docs"
  },
  "author": "Phil Pl√ºckthun <phil@plckthn.me> (https://github.com/philplckthun)",
  "bugs": {
    "url": "https://github.com/philplckthun/fluorine/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philpl/fluorine.git"
  },
  "license": "CC0-1.0",
  "keywords": [
    "fluorine",
    "flux",
    "react",
    "rx",
    "reducer",
    "state",
    "side effect",
    "manager",
    "immutable"
  ],
  "dependencies": {
    "@reactivex/rxjs": "^5.0.0-beta.9",
    "babel-runtime": "^6.9.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-closure-elimination": "^1.0.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-philpl": "^0.1.0",
    "enzyme": "^2.3.0",
    "eslint": "^3.0.1",
    "eslint-config-excellence": "^1.13.0",
    "eslint-plugin-react": "^5.2.2",
    "gitbook-cli": "^2.1.2",
    "jsdom": "^9.2.1",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "webpack": "^2.1.0-beta.13"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0"
  },
  "engines": {
    "node": ">= 0.12.0"
  },
  "ava": {
    "files": [
      "test"
    ],
    "require": [
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "presets": [
        "babel-preset-philpl"
      ],
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
